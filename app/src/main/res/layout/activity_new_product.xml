<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".new_product">


    <ImageView
        android:id="@+id/select_product_image"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:src="@drawable/cam"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />

    <EditText
        android:id="@+id/ItemID"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@id/select_product_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/edit_corner"
        android:hint="@string/hint4"
        android:paddingLeft="10dp" />
    <EditText
        android:id="@+id/name"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/edit_corner"
        android:paddingLeft="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ItemID"
        android:layout_marginTop="10dp"
        android:hint="@string/hint1"
        />
    <EditText
        android:id="@+id/price"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/edit_corner"
        android:paddingLeft="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/name"
        android:layout_marginTop="10dp"
        android:hint="@string/hint2"
        />
<!--    <EditText-->
<!--        android:id="@+id/category"-->
<!--        android:layout_width="300dp"-->
<!--        android:layout_height="40dp"-->
<!--        android:background="@drawable/edit_corner"-->
<!--        android:paddingLeft="10dp"-->
<!--        android:layout_centerHorizontal="true"-->
<!--        android:layout_below="@id/price"-->
<!--        android:layout_marginTop="10dp"-->
<!--        android:hint="@string/hint3"-->
<!--        />-->

    <Button
        android:id="@+id/insert"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@id/price"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/button_corner"
        android:onClick="Dashboard"
        android:text="@string/btn4" />
    <!-- android:textAllCaps="false"-->



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="800dp"
        android:background="@color/black">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:onClick="Home"
            android:src="@drawable/home4" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="30dp"
            android:onClick="Search"
            android:src="@drawable/search4"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="10dp"
            android:onClick="logout"
            android:src="@drawable/logout4"

            />

    </LinearLayout>

</RelativeLayout>