<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="30dp"
    android:elevation="90dp"
    android:layout_margin="7dp">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:orientation="vertical"
            android:background="#6A006FFF">


            <RelativeLayout
                android:id="@+id/relative1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/NIC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/txtValue2"
                    android:textColor="#090909"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <EditText
                android:id="@+id/editTextNIC"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="NIC" />
            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/relative2"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cusName"
                android:textColor="#090909"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="@string/txtValue3"/>

            <EditText
                android:id="@+id/editTextCusFName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Name" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cusAddress"
                android:textColor="#090909"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="@string/txtValue6"/>


            <EditText
                android:id="@+id/editTextCusAddress"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"

                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Address" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relative4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mail"
                android:textColor="#090909"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="@string/txtValue7"/>


            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"

                android:ems="10"
                android:inputType="textPersonName"
                android:hint="E-Mail" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relative5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Phone"
                android:textColor="#090909"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="@string/txtValue8"/>

            <EditText
                android:id="@+id/editTextPhone"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Phone Number" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pass"
                android:textColor="#090909"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="@string/txtValue9"/>
            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
               android:layout_marginLeft="150dp"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="Password" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user"
                android:textColor="#090909"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="@string/txtValue10"/>
            <EditText
                android:id="@+id/editTextUserName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="User" />

            </RelativeLayout>




        </LinearLayout>
    </ScrollView>

</androidx.cardview.widget.CardView>