            <RelativeLayout
                android:id="@+id/relative2"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                 >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cusName"
                android:textColor="#090909"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="@string/txtValue3"/>

            <TextView
                android:id="@+id/editTextCusFName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="18dp"
                android:hint="Name" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cusAddress"
                android:textColor="#090909"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="@string/txtValue6"/>


            <TextView
                android:id="@+id/editTextCusAddress"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:textSize="18dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Address" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relative4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mail"
                android:textColor="#090909"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="@string/txtValue7"/>


            <TextView
                android:id="@+id/editTextEmail"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:textSize="18dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="E-Mail" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relative5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Phone"
                android:textColor="#090909"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="@string/txtValue8"/>

            <TextView
                android:id="@+id/editTextPhone"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="18dp"
                android:hint="Phone Number" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pass"
                android:textColor="#090909"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="@string/txtValue9"/>

                <TextView
                    android:id="@+id/editTextPassword"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="150dp"
                    android:layout_marginBottom="0dp"
                    android:ems="10"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textSize="18dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user"
                android:textColor="#090909"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="@string/txtValue10"/>
            <TextView
                android:id="@+id/editTextUserName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="18dp"
                android:hint="User"
                android:layout_marginBottom="20dp"/>

            </RelativeLayout>




        </LinearLayout>
    </ScrollView>

</androidx.cardview.widget.CardView>