<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="30dp"
    android:elevation="90dp"
    android:layout_margin="7dp">
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:orientation="vertical"
        android:background="#6A006FFF"
        >


        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/OrderId"
            android:textColor="#090909"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:text="@string/txtValue1"/>

        <TextView
            android:id="@+id/editTextOrderID"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:hint="Order Id" />
       </RelativeLayout>



       <RelativeLayout
           android:id="@+id/relative2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cusNic"
            android:textColor="#090909"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:text="@string/txtValue2"/>

        <TextView
            android:id="@+id/editTextCusNIC"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="170dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="18dp"
            android:hint="Nic" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cusName"
            android:textColor="#090909"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:textSize="18dp"
            android:text="@string/txtValue3"/>


        <TextView
            android:id="@+id/editTextCusName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="18dp"
            android:hint="Name" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/address"
            android:textColor="#090909"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:text="@string/txtValue6"/>


        <TextView
            android:id="@+id/editTextAddress"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:textSize="18dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Address" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/DelID"
            android:textColor="#090909"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:text="@string/txtValue4"/>

        <TextView
            android:id="@+id/editTextDelID"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="18dp"
            android:hint="Delivery Id " />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/status"
            android:textColor="#090909"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:text="@string/txtValue5"/>

        <TextView
            android:id="@+id/editTextStatus"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="18dp"
            android:hint="Ststus " />

        </RelativeLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/buttonupdate"
            android:onClick="UpdateOrderStatus"
            android:text="@string/btn6"
            android:textStyle="bold" />



    </LinearLayout>
</ScrollView>
</androidx.cardview.widget.CardView>