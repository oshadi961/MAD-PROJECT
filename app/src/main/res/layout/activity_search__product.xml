<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Search_Product">

    <EditText
        android:id="@+id/ItemID"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/edit_corner"
        android:paddingLeft="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:hint="@string/hint4"
        /><!--android:text="@string/fruit6"-->


    <Button
        android:id="@+id/btnSearch"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@id/ItemID"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/searchbutton"
        android:text="@string/btn10" />


    <ImageView
        android:id="@+id/ProductViewImageSearch"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:layout_marginHorizontal="50dp"
        android:layout_below="@+id/btnSearch"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/IdItem"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/edit_corner"
        android:paddingLeft="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnSearch"
        android:layout_marginTop="150dp"
        android:textSize="15dp"
        android:hint="Prodct ID"
        /><!--android:text="@string/fruit6"-->

    <EditText
        android:id="@+id/name"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/edit_corner"
        android:paddingLeft="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/IdItem"
        android:layout_marginTop="10dp"
        android:hint="Product Name"
        /><!--android:text="@string/fruit6"-->

    <EditText
        android:id="@+id/price"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/edit_corner"
        android:paddingLeft="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/name"
        android:layout_marginTop="10dp"
        android:hint="Product Price"
        /><!--android:text="@string/price3"-->

    <EditText
        android:id="@+id/category"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/edit_corner"
        android:paddingLeft="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/price"
        android:layout_marginTop="10dp"
        android:hint="Category"
        /><!--android:text="@string/cat2"-->


    <Button
        android:id="@+id/btnClear"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@id/category"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/clearbutton"
        android:text="@string/btn11" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="800dp"
        android:background="@color/black">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:onClick="Home"
            android:src="@drawable/home4" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="30dp"
            android:onClick="Home"
            android:src="@drawable/search4"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="10dp"
            android:onClick="logout"
            android:src="@drawable/logout4"

            />

    </LinearLayout>

</RelativeLayout>