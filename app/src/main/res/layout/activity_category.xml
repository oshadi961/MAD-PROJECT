<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Category">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="@string/view7"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">


        <ImageView
            android:id="@+id/cat_fruit"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/pomegranate"/>

        <ImageView
            android:id="@+id/cat_veg"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/pomegranate"/>

        <ImageView
            android:id="@+id/cat_grocery"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/pomegranate"/>

        <ImageView
            android:id="@+id/cat_Dairy"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/pomegranate"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">


        <ImageView
            android:id="@+id/cat_grain"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/pomegranate"/>

        <ImageView
            android:id="@+id/cat_meat"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/pomegranate"/>

        <ImageView
            android:id="@+id/cat_beverage"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/pomegranate"/>

        <ImageView
            android:id="@+id/cat_bakery"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/pomegranate"/>

    </LinearLayout>


</RelativeLayout>