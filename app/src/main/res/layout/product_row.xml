<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="22dp"
    android:elevation="90dp"
    android:layout_margin="7dp">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:orientation="vertical"
            android:background="#540EDB2B">




            <ImageView
                android:id="@+id/ProductImageView"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:layout_marginHorizontal="50dp"/>

            <RelativeLayout
                android:id="@+id/relative1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/OrderId"
                android:textColor="#090909"
                android:textStyle="bold"
                android:textSize="18dp"

                android:text="@string/col4"/>

            <EditText
                android:id="@+id/editTextProductID"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:ems="10"
                android:hint="Product Id"
                android:inputType="textPersonName" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:id="@+id/cusNic"
                android:textColor="#090909"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="@string/col1"/>

            <EditText
                android:id="@+id/editTextProductName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Product Name" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cusName"
                android:textColor="#090909"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="@string/col3"/>


            <EditText
                android:id="@+id/editTextProductPrice"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
               android:layout_marginLeft="150dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Price" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/address"
                android:textColor="#090909"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="@string/col2"/>


            <EditText
                android:id="@+id/editTextProductCat"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Category" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</androidx.cardview.widget.CardView>